{
 "database": {
  "rules": "database-rules.json"
 },
 "hosting": {
  "public": "public",
  "cleanUrls": true,
  "headers": [
   {
    "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
    "headers": [
     {
      "key": "Access-Control-Allow-Origin",
      "value": "*"
     }
    ]
   },
   {
    "source": "**/*.@(js|css|jpg|jpeg|gif|png|ico)",
    "headers": [
     {
      "key": "Cache-Control",
      "value": "max-age=604800"
     }
    ]
   }
  ]
 }
}