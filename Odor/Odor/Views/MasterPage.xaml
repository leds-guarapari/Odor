<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odor.Views.MasterPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Novo" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <ListView>
                <ListView.Header>
                    <StackLayout>
                        <Label Text="Listagem de odores" Margin="10" HorizontalOptions="Center" />
                        <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="LightGray"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>