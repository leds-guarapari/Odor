<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odor.Views.MapsPage"
             Visual="Material">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Selecionar" Command="{Binding SelectCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <WebView Source="{Binding Tile}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Navigated="WebViewNavigated" Navigating="WebViewNavigating" />
            <StackLayout MinimumHeightRequest="100" Padding="10">
                <Label Text="Endereço" Margin="15, 10, 15, 0" HorizontalOptions="Start" VerticalOptions="Start" FontSize="Small" TextColor="{StaticResource ColorPrimaryDark}" />
                <Label Text="{Binding Address}" Margin="15, 10, 15, 0" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" FontSize="Small" />
                <Button Text="Obter" Clicked="OnButtonClicked" BackgroundColor="{StaticResource ColorPrimaryDark}"></Button>
                <ActivityIndicator HorizontalOptions="Center" VerticalOptions="EndAndExpand" Color="LightGray" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" WidthRequest="50" HeightRequest="50" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>