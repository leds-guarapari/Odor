<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odor.Views.UserPage"
             Title="Perfil">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Name" Placeholder="Nome completo"></Entry>
            <Entry x:Name="Number" Keyboard="Numeric" Placeholder="Telefone"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>