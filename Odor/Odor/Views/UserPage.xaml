<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odor.Views.UserPage"
             Title="Perfil">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="SaveClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Cadastro de informações pessoais" Margin="10" HorizontalOptions="Center" />
            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" Color="LightGray"/>
            <Entry x:Name="Name" Text="{Binding User.Name}" Margin="20" Placeholder="Nome completo"></Entry>
            <Entry x:Name="Number" Text="{Binding User.Number}" Margin="20" Keyboard="Numeric" Placeholder="Telefone"></Entry>
            <ActivityIndicator HorizontalOptions="Center" VerticalOptions="EndAndExpand" Color="LightGray" IsRunning="False" WidthRequest="50" HeightRequest="50" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>