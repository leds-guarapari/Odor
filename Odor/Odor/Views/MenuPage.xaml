<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odor.Views.MenuPage"
             Visual="Material">
    <MasterDetailPage.Master>
        <ContentPage Title="Odor" Padding="0">
            <ContentPage.Content>
                <StackLayout>
                    <Grid BackgroundColor="Accent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="1"
                               Grid.Row="1"
                               Text="Menu"
                               FontSize="Large"
                               TextColor="White"
                               VerticalOptions="Start" />
                    </Grid>
                    <TableView Intent="Menu">
                        <TableSection>
                            <ViewCell Tapped="GoUserPage">
                                <StackLayout Orientation="Horizontal" Padding="15,10">
                                    <Image Source="person.png" />
                                    <Label Text="Meu perfil" VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell Tapped="GoOdorPage">
                                <StackLayout Orientation="Horizontal" Padding="15,10">
                                    <Image Source="add.png" />
                                    <Label Text="Novo odor" VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell Tapped="GoMasterPage">
                                <StackLayout Orientation="Horizontal" Padding="15,10">
                                    <Image Source="blur.png" />
                                    <Label Text="Minhas ocorrências" VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell Tapped="GoAboutPage">
                                <StackLayout Orientation="Horizontal" Padding="15,10">
                                    <Image Source="about.png" />
                                    <Label Text="Sobre o aplicativo" VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                        </TableSection>
                    </TableView>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>